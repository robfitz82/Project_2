<% @photos.each_with_index do |p, index| %>	
	<% if index % 3 == 0 %>
	<div class="row">
		<div class="col-sm-4">
      <%= image_tag("#{p.url}-/resize/200x/") %>
   </div>
	<% else %>
	<div class="col-sm-4">
      <%= image_tag("#{p.url}-/resize/200x/") %>
   </div>
	<% end %> 
<% end %>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist" id="myTab">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="portrait">Portrait</div>
    <div role="tabpanel" class="tab-pane fade" id="landscape">Landscape</div>
    <div role="tabpanel" class="tab-pane fade" id="black">Black and White</div>
    <div role="tabpanel" class="tab-pane fade" id="abstract">Abstract</div>
  </div>

</div>

<script>
    engine();
    function engine(){
        $('#myTab a').click(function (e) {
          e.preventDefault()
          $(this).tab('show')
        })
    }
</script>